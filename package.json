{
  "name": "ws-graphql",
  "version": "0.1.0",
  "description": "A simple way of handling graphql subscriptions over websockets.",
  "dependencies": {
    "node-static": "0.5.9"
  },
  "scripts": {
    "lint": "eslint api ui",
    "test": "mocha --compilers js:babel-core/register --reporter spec --full-trace 'test/*.js'",
    "start-server": "nodemon src/server.js --exec babel-node",
    "start-client": "webpack-dev-server -d --hot --inline --no-info --port 3000",
    "start": "concurrently \"npm run start-server\" \"npm run start-client\""
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-core": "^6.8.0",
    "babel-eslint": "^6.1.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.9.0"
  }
}
